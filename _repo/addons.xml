<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.Pans" name="[COLORblue]Pans Wizard[/COLOR]" version="1.0.0" provider-name="[COLORblue]Pans Wizard[/COLOR]">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[COLORblue]Pans Wizard[/COLOR]</summary>
    <description lang="en">[COLORblue]Pans Wizard[/COLOR] allows you to get access to the latest [COLORblue]Pans Wizard [/COLOR] Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.pandorasbox" name="Pandoras Box" version="1.0.9" provider-name="Origin">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.urlresolver"  version="2.1.2"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
	<summary lang="en">Pandoras Box</summary>
	<description lang="en">An addon by origin for all-round Entertainment</description>
	<disclaimer lang="en">The author neither hosts or stores any content, the author has no affiliation with content hosts</disclaimer>
	<platform>all</platform>
  </extension>
</addon>

    <addon id="repository.PansBox" name="PansBox Repo" version="0.1.0" provider-name="PansBox">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="PansBox Repo">
            <info compressed="false">http://raw.github.com/pansbox/Pandoras_Box/master/_repo/addons.xml</info>
            <checksum>http://raw.github.com/pansbox/Pandoras_Box/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">http://raw.github.com/pansbox/Pandoras_Box/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Content From Pandoras Box, thanks to Origin for all the support.</summary>
            <description>AN Add-On for all</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
